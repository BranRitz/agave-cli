#!/bin/bash
# 
# auth-token-delete.sh
# 
# author: dooley@tacc.utexas.edu
#
# This script is part of the Agave API command line interface (CLI).
# It deletes an existing token.
#

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source "$DIR/common.sh"

storetoken=0
local=0

# Script logic -- TOUCH THIS {{{

# A list of all variables to prompt in interactive mode. These variables HAVE
# to be named exactly as the longname option definition in usage().
interactive_opts=(apisecret apikey)

# Print usage
usage() {
  echo -n "$(basename $0) [OPTION]... [TOKEN]

Delete a token. This expires the token and will invalidate it across
the API immediately.

 Options:
  -s, --apisecret   API secret for authenticating
  -k, --apikey      API key for authenticating, its recommended to insert
                    this through the interactive option
  -l, --local       Deletes the local token store forcing a reauthentication
  					on the next call to the api.
  -H, --hosturl     URL of the service
  -d, --development Run in dev mode using default dev server
  -f, --force       Skip all user interaction
  -i, --interactive Prompt for values
  -q, --quiet       Quiet (no output)
  -v, --verbose     Output more
  -h, --help        Display this help and exit
      --version     Output version information and exit
"
}

##################################################################
##################################################################
#						Begin Script Logic						 #
##################################################################
##################################################################

source "$DIR/auth-common.sh"

main() {
	#echo -n
	#set -x
	
	if ((local)); then
		clear_local_token_cache
	else
		if [ -z "$args" ]; then
			err "Please specify a valid token to delete"
		else
		
			cmd="curl -sku \"$apisecret:XXXXXX\" -X DELETE $hosturl/tokens/$args"

			log "Calling $cmd"
		
			response=`curl -sku "$apisecret:$apikey" -X DELETE "$hosturl/tokens/$args"`
	
			check_response_status "$response"
	
			if [ "$response_status" = "success" ]; then
				format_api_json "$response"
			else
				jsonval response_message "$response" "message" 
				err "$response_message"
			fi
		fi	
	fi	
}

format_api_json() {

	jsonval storedtoken "${tokenstore}" "apikey" 
	
	# clear the local token cache if they expire the token
	if [ "$storedtoken" = "$args" ]; then
		clear_local_token_cache
	fi
	
	if ((verbose)); then
		echo "$1" | python -mjson.tool
	else
		success "Successfully deleted token $arg"
	fi
}

clear_local_token_cache() {

	rm $HOME/.agave
}

##################################################################
##################################################################
#						End Script Logic						 #
##################################################################
##################################################################

# }}}

# Parse command line options
source "$DIR/options.sh"


# Main loop {{{

# Print help if no arguments were passed.
[[ $# -eq 0 ]] && set -- "-i"

# Read the options and set stuff
while [[ $1 = -?* ]]; do
  case $1 in
    -h|--help) usage >&2; safe_exit ;;
    --version) out "$(basename $0) $version"; safe_exit ;;
    -s|--apisecret) shift; apisecret=$1 ;;
    -k|--apikey) shift; apikey=$1 ;;
    -l|--local) shift; local=1 ;;
    -H|--hosturl) shift; hosturl=$1;;
  	-d|--development) development=1 ;;
    -v|--verbose) verbose=1 ;;
    -q|--quiet) quiet=1 ;;
    -i|--interactive) interactive=1 ;;
    -f|--force) force=1 ;;
    --endopts) shift; break ;;
    *) die "invalid option: $1" ;;
  esac
  shift
done

# Store the remaining part as arguments.
args+=("$@")

# }}}

# Run the script logic
source "$DIR/runner.sh"
